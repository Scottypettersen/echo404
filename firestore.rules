rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // everyone can read the tiles
    match /tiles/{tileId} {
      allow read: if true;
      
      // only allow creation of a brand-new tile by the signed-in user who owns it
      allow create: if
        request.auth.uid != null
        && request.auth.uid == request.resource.data.claimedBy
        && !exists(/databases/$(database)/documents/tiles/$(tileId))
        // optional: ensure the document ID matches the “index” field
        && request.resource.data.index == int(tileId);
      
      // no client-side updates or deletes ever
      allow update, delete: if false;
    }

    // lock down everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
