rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // all clients can read any tile
    match /tiles/{tileId} {
      allow read: if true;

      // only allow a new tile doc to be created if:
      // 1) the user is signed in
      // 2) they’re the one claiming it
      // 3) it doesn’t already exist (no overwrites)
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.claimedBy
                    && !exists(/databases/$(database)/documents/tiles/$(tileId));

      // no updates or deletes from clients
      allow update, delete: if false;
    }
  }
}
