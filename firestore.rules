rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // everyone can list & get any tile
    match /tiles/{tileId} {
      allow read: if true;

      // only allow a *new* tile doc to be written by its claimant
      allow create: if
        request.auth != null
        && request.auth.uid == request.resource.data.claimedBy
        && !exists(/databases/$(database)/documents/tiles/$(tileId));

      // never allow clients to modify or delete
      allow update, delete: if false;
    }

    // lock down everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
